.grid-container
  %section.usa-section
    = form_for agency, html: { class: 'usa-form usa-form--large margin-x-auto' } do |f|
      %h1
        - if agency.persisted?
          Edit Agency
        - else
          New Agency

      = f.label :name, class: 'usa-label'
      = f.text_field :name, class: 'usa-input'

      = f.label :short_name, class: 'usa-label'
      = f.text_field :short_name, class: 'usa-input'

      = f.submit class: 'usa-button width-full'
