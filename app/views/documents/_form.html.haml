.grid-container
  %section.usa-section
    = form_for document, html: { class: 'usa-form usa-form--large margin-x-auto' } do |f|
      %h1
        - if document.persisted?
          Edit Document
        - else
          New Document

      = f.hidden_field :incident_id

      = f.label :name, class: 'usa-label'
      = f.text_field :name, class: 'usa-input'

      = f.label :description, class: 'usa-label'
      = f.text_area :description, class: 'usa-textarea'

      = f.label :url, class: 'usa-label'
      = f.text_field :url, class: 'usa-input'

      = f.submit class: 'usa-button width-full'
