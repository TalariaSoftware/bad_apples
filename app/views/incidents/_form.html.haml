%section.usa-section
  = form_for incident, html: { class: 'usa-form usa-form--large margin-x-auto' } do |f|
    %h1
      - if incident.persisted?
        Edit Incident
      - else
        New Incident

    = f.label :heading, class: 'usa-label'
    = f.text_field :heading, class: 'usa-input'

    = f.label :description, class: 'usa-label'
    = f.text_area :description, class: 'usa-textarea'

    = f.label :datetime, class: 'usa-label'
    = f.text_field :datetime, class: 'usa-input'

    = f.submit class: 'usa-button width-full'
